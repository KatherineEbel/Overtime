  <%= form_for @post do |f| %>
    <% if @post.errors.any? %>
     <% @post.errors.full_messages.each do |message| %>
        <%= js add_gritter(message, title: 'Overtime App notification',sticky: false) %>
     <% end %>
    <% end %>
  <div class="form-group">
    <%= f.label :date, class: 'col-sm-2' %>
    <%= f.date_field :date, class: 'form-control', id: 'email' %>
  </div>
  <div class="form-group">
    <%= f.label :rationale, class: 'col-sm-2' %>
    <%= f.text_area :rationale, class: 'form-control', id: 'rationale' %>
  </div>
  <div class="form-group">
    <%#= collection_radio_buttons :post, :id, Post.all, :status, :status %>
    <%= f.radio_button :status, 'submitted', class: 'form-control', id: 'submitted' %>
    <%= f.label :status, 'Submitted', class: 'col-sm-2' %>

    <%= f.radio_button :status, 'approved', class: 'form-control', id: 'approved' %>
    <%= f.label :status, 'Approved', class: 'col-sm-2' %>

    <%= f.radio_button :status, 'rejected', class: 'form-control', id: 'rejected' %>
    <%= f.label :status, 'Rejected', class: 'col-sm-2' %>
  </div>
  <%= f.submit value: 'Save', class: 'btn btn-primary' %>
<% end %>
